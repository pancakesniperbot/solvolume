{
  "buildCommand": "npm install && npm run build && cp -r client/dist dist",
  "outputDirectory": "dist",
  "nodeVersion": "20",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/.*", "dest": "/worker.js" },
    { "src": "/ws", "dest": "/worker.js" },
    { "src": ".*", "dest": "/index.html" }
  ]
} 